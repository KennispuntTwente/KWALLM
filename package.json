{
  "name": "text-analysis-with-llm-app",
  "version": "1.0.0",
  "description": "Desktop app version of text analysis app, see: github.com/KennispuntTwente/tekstanalyse-app",
  "author": "Luka Koning <l.koning@kennispunttwente.nl>",
  "license": "AGPL-3.0",
  "main": "package-main.js",
  "scripts": {
    "start": "npm run prebuild && electron .",
    "setup-portable-r": "node scripts/package-setup-portable-r.js",
    "setup-portable-pandoc": "node scripts/package-setup-portable-pandoc.js",
    "prebuild": "node scripts/package-prebuild.js",
    "build": "npm run prebuild && electron-packager . tekstanalyse-met-llm --platform=win32 --arch=x64 --out=dist --overwrite --icon=www/icon.ico --ignore=\"^/(dist|build|example|progress|progress_secondary|renv|scripts|\\.gitignore|\\.Rhistory|\\.Rprofile|app\\.log|app\\.R|Dockerfile|.*\\.Rproj|README|renv\\.lock|run\\.bat)$\""
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "electron": "^28.3.3"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "tree-kill": "^1.2.2",
    "unzipper": "^0.12.3",
    "wait-on": "^8.0.3"
  }
}
